<h1>Eat Da Burgers!</h1>

<div class="container">
  <div class="section">
    <h2>Burgers To Be Devoured!</h2>
    
    <ul>
      {{#each burgers}}
        {{#unless devour}}
          {{> burgers/burger-block devour=true}}
        {{/unless}}
      {{/each}}
    </ul>
  </div>
  
  <div class="section">
    <h2>Burgers That Have Been Devoured!</h2>
    
    <ul>
      {{#each burgers}}
        {{#if devour}}
          {{> burgers/burger-block devour=false}}
        {{/if}}
      {{/each}}
    </ul>
  </div>
</div>

<br>
<div class="container2">
  <div class="container-inner">
    <h2>Add a Burger</h2>
    <form class="create-form">
    
      <div class="form-group">
        <label for="dev">Burger Name:</label>
        <input type="text" id="dev" name="name">
      </div>
    
      <button type="submit">Add Burger</button>
    </form>
  </div>
</div>
